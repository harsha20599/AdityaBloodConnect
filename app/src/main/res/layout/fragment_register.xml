<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.adityawebapps.adityabloodconnect.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
                android:layout_marginTop="50dp"
                android:padding="20dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#fff">



                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="Name"
                    android:textColor="#fff"
                    android:textColorHint="#000000"
                    android:background="@drawable/bg_white"
                    android:padding="10dp"
                    android:ems="10"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/editText4" />

                <EditText
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:textColor="#fff"
                    android:textColorHint="#000000"
                    android:background="@drawable/bg_white"
                    android:padding="10dp"
                    android:hint="Phone"
                    android:ems="10"
                    android:id="@+id/editText5" />

                <EditText
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:textColor="#fff"
                    android:textColorHint="#000000"
                    android:background="@drawable/bg_white"
                    android:padding="10dp"
                    android:ems="10"
                    android:hint="Email"
                    android:id="@+id/editText6" />


                <AutoCompleteTextView
                    android:layout_marginBottom="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="District"
                    android:textColor="#fff"
                    android:textColorHint="#000000"
                    android:background="@drawable/bg_white"
                    android:padding="10dp"
                    android:id="@+id/district" />

                <AutoCompleteTextView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City"
                    android:textColor="#fff"
                    android:textColorHint="#000000"
                    android:background="@drawable/bg_white"
                    android:padding="10dp"
                    android:id="@+id/city" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp">
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="A+"
                android:textSize="20sp"
                android:background="@drawable/bg_white"
                android:id="@+id/a_plus"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="A-"
                android:layout_toRightOf="@id/a_plus"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:background="@drawable/bg_white"
                android:id="@+id/a_minus"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="B+"
                android:layout_toRightOf="@id/a_minus"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:background="@drawable/bg_white"
                android:id="@+id/b_plus"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="B-"
                android:layout_toRightOf="@id/b_plus"
                android:textSize="20sp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_white"
                android:id="@+id/b_minus"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="AB+"
                android:textSize="20sp"
                android:layout_toRightOf="@id/b_minus"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_white"
                android:id="@+id/ab_plus"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="AB-"
                android:layout_marginTop="15dp"
                android:layout_below="@id/a_minus"
                android:textSize="20sp"
                android:layout_marginLeft="65dp"
                android:background="@drawable/bg_white"
                android:id="@+id/ab_minus"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="O+"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@id/ab_minus"
                android:layout_below="@id/b_plus"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:background="@drawable/bg_white"
                android:id="@+id/o_plus"/>
            <Button
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:text="O-"
                android:layout_toRightOf="@id/o_plus"
                android:layout_below="@id/b_minus"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="15dp"
                android:textSize="20sp"
                android:background="@drawable/bg_white"
                android:id="@+id/o_minus"/>

        </RelativeLayout>


        </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_alignParentTop="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="REGISTER YOURSELF"
            android:gravity="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:padding="10dp"
            android:textColor="#fff"
            android:background="#757575"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:text="REGISTER"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/button" />




    </RelativeLayout>
</FrameLayout>
