<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context="com.adityawebapps.adityabloodconnect.RegisterFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#7B1FA2">


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColor="#fff"
            android:textColorHint="#F3E5F5"
            android:background="#BA68C8"
            android:padding="10dp"
            android:ems="10"
            android:layout_marginBottom="20dp"
            android:id="@+id/editText4" />

        <EditText
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:textColor="#fff"
            android:textColorHint="#F3E5F5"
            android:background="#BA68C8"
            android:padding="10dp"
            android:hint="Phone"
            android:ems="10"
            android:id="@+id/editText5" />

        <EditText
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:textColor="#fff"
            android:textColorHint="#F3E5F5"
            android:background="#BA68C8"
            android:padding="10dp"
            android:ems="10"
            android:hint="Email"
            android:id="@+id/editText6" />


        <AutoCompleteTextView
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="District"
            android:textColor="#fff"
            android:textColorHint="#F3E5F5"
            android:background="#BA68C8"
            android:padding="10dp"
            android:id="@+id/autoCompleteTextView" />

        <AutoCompleteTextView
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="City"
            android:textColor="#fff"
            android:textColorHint="#F3E5F5"
            android:background="#BA68C8"
            android:padding="10dp"
            android:id="@+id/autoCompleteTextView2" />

        <RelativeLayout
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:id="@+id/radio_a_plus" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A+"
                    android:textSize="30sp"
                    android:layout_marginLeft="-50dp"
                    android:layout_marginTop="2dp"

                    />
                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:id="@+id/radio_a_minus" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A-"
                    android:textSize="30sp"
                    android:layout_marginLeft="-50dp"
                    android:layout_marginTop="2dp"

                    />
                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:id="@+id/radio_ab_plus" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB+"
                    android:textSize="20sp"
                    android:layout_marginLeft="-50dp"


                    />
                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:id="@+id/radio_ab_minus" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AB-"
                    android:textSize="20sp"
                    android:layout_marginLeft="-50dp"


                    />
                <RadioButton

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/checkbox_selector"
                    android:layout_alignParentStart="true"
                    android:layout_weight="1"
                    android:id="@+id/radio_b_plus" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="B+"
                    android:textSize="30sp"
                    android:layout_marginLeft="-40dp"


                    />

            </RadioGroup>


        </RelativeLayout>


    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@color/red"
            android:text="REGISTER"
            android:textSize="20sp"
            android:textColor="#fff"
            android:id="@+id/button" />



    </RelativeLayout>
</FrameLayout>
